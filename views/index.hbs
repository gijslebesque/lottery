<h1>{{title}}</h1>
<p>Get your lottery ticket now!</p>



<form method="POST" action="/createTicket">
    <input type="text" name="name" placeholder="Name" class="validate">
    
    <input type="text" name="flightNumber" placeholder="Flight number">
    
    <input type="text" name="seat" placeholder="Seat number">
    <label for="birthday">Birthday</label>
    <input type="date" label="birthday" name="birthday" placeholder="Birthday">
    <label for="flightDate">Flightdate</label>
    <input type="date" name="flightDate" placeholder="Flightdate">
    <button class="btn waves-effect waves-light" type="submit" name="action">Get my ticket</button>
        
</form>